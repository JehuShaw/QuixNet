<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- ******************** The following are some configurations of the framework program ************************* -->
    <!-- Project name -->
    <add key="ProjectName" value="xyproject" />
    <!-- Current node ID, unique ID for each node, value range [1, 6535], 0 is invalid ID -->
    <add key="ServerID" value="3" />
    <!-- The function name of the current node, if the functions are the same, use the same name. For example, the guild function can be named "ClanServer" -->
    <add key="ServerName" value="CacheServer" />
    <!-- Logical processing area identifier (such as game world), with the same value indicating the same area, value range [1, 6535], value 0 does not enable this function -->
    <add key="ServerRegion" value="0" />
    <!-- The IP address bound to the current node server -->
    <add key="ServerBind" value="tcp://127.0.0.1:5656" />
    <!-- Control Server IP to be connected -->
    <add key="ServantConnect" value="tcp://127.0.0.1:6002" />
    <!-- The IP address that the current node needs to connect to; multiple connections are allowed. When multiple connections are required, please fill in "ServerConnect0", "ServerConnect1", "ServerConnect2" in order -->
    <add key="ServerConnect0" value="tcp://127.0.0.1:6001" />
    
    <!-- RPCZ thread pool thread count, default greater than or equal to 1 -->
    <add key="RpczThreads" value="5" />
    <!-- The number of threads in the game logic thread pool is greater than or equal to 10 by default -->
    <add key="GameThreads" value="10" />
    <!-- ZeroMQ IO thread count, default greater than or equal to 1 -->
    <add key="ZmqioThreads" value="2" />
    <!-- The retention time of each record in the cache server is recalculated if there is any operation on the record. The time unit is minutes and the range is [1, 2147483647]. The default is 5 minutes -->
    <add key="CacheRecordExpire" value = "5"/>
    <!-- Database address -->
    <add key="DatabaseHost" value="127.0.0.1" />
    <!-- Database port -->
    <add key="DatabasePort" value="3306" />
    <!-- User name -->
    <add key="DatabaseUser" value="root" />
    <!-- Password -->
    <add key="DatabasePSW" value="xmxy08155" />
    <!-- The database name where field names, table names, and other information are configured -->
    <add key="InfoDBName" value="node_memcache" />
    <!-- The database name for data storage can be separated by commas if multiple databases need to be imported, such as "Database 1, Database 2, Database 3...". Please note that the first database name configured will be set to the default database used -->
    <add key="DataDBNames" value="node_control_centre" />
    <!-- The data balance routing user ID is stored in the database's "table" ("table" refers to InfoDBName, whose configuration value comes from the "name" field of the database table "containers") -->
    <add key="BalUserCntrName" value="node_bal_user_id" />
    <!-- The data balancing routing service ID is stored in the "table" of the database ("table" refers to InfoDBName, whose configuration value comes from the "name" field of the database table "containers") -->
    <add key="BalServCntrName" value="node_bal_serv_id" />
    <!-- Directly specify the ID of the target server in the "table" stored in the database ("table" refers to InfoDBName, whose configuration value comes from the "name" field of the database table "containers") -->
    <add key="DirServCntrName" value="node_dir_serv_id" />
    <!-- The number of pre created database connections -->
    <add key="DatabaseConnection" value= "5" />
    <!-- Function name of proxy node -->
    <add key="AgentServerName" value="AgentServer" />
    <!-- ******************** The following are some configurations of the game logic program ************************* -->
  </appSettings>

</configuration>