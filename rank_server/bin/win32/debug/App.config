<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- ********************以下为框架部分程序的一些配制************************* -->
    <!-- 当前项目名称 -->
    <add key="ProjectName" value="zswh" />
    <!-- 当前节点ID，每个节点唯一的ID, 值范围 [1,65535], 0 为无效ID -->
    <add key="ServerID" value="8" />
    <!-- 当前节点的功能名称，如果功能相同就用相同的名称,比如公会功能就可以命名成“ClanServer”-->
    <add key="ServerName" value="RankServer" />
    <!-- 逻辑处理区域标识（比如：游戏世界），值相同为同一区域, 值范围 [1,65535], 值为 0 不开启该功能 -->
    <add key="ServerRegion" value="0" />
    <!-- 当前节点服绑定的IP -->
    <add key="ServerBind" value="tcp://127.0.0.1:5558" />
    <!-- 要连接的控制节点IP，ControlServant -->
    <add key="ServantConnect" value="tcp://127.0.0.1:6002"/>
    <!-- 当前节点要连接的IP; 可以多连接,当需要多个连接时,请按顺序填写 "ServerConnect0"、"ServerConnect1"、"ServerConnect2"... -->
    <add key="ServerConnect0" value="tcp://127.0.0.1:5555" />
    <!-- RPCZ 线程池线程数，默认大于等于1 -->
    <add key="RpczThreads" value="3" />
    <!-- 游戏逻辑 线程池线程数，默认大于等于10 -->
    <add key="GameThreads" value="10" />
    <!-- ZeroMQ IO 线程数，默认大于等于1 -->
    <add key="ZmqioThreads" value="2" />
    <!-- 游戏配置文件路径 -->
    <add key="TemplatePath" value ="./resource/csv/"/>
    <!-- 排行版数据库缓存节点ID -->
    <add key="RankCacheID" value="9" />
    <!-- 排行版入榜下限值 -->
    <add key="FloorLimit" value="200"/>
    <!-- 排行版入榜人数上限值 -->
    <add key="MaxSizeLimit" value="100000"/>
    
    <!-- ********************以下为游戏逻辑部分程序的一些配制************************* -->
  </appSettings>

</configuration>